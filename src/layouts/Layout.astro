---
interface Props {
	title: string;
	description: string;
}

const { title, description } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
import Navbar from "../components/modern/Navbar.astro";
import Footer from "../components/modern/Footer.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<!-- Google tag (gtag.js) -->
		<script
			is:inline
			async
			src="https://www.googletagmanager.com/gtag/js?id=G-7VVK555MQK"
		></script>
		<script is:inline>
			window.dataLayer = window.dataLayer || [];
			function gtag() {
				dataLayer.push(arguments);
			}
			gtag("js", new Date());

			gtag("config", "G-7VVK555MQK");
		</script>
		<meta
			name="google-site-verification"
			content="8z4t6ut9IiaDmGuRfvBuJKlwbJ_tKuiUM8NXkHrAmVQ"
		/>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="./favicon.svg" />
		<link rel="canonical" href={canonicalURL} />
		<style>
			@import url("https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap");

			:root {
				--primary-color: #ff5525;
				--primary-dark: #e04515;
				--secondary-color: #000000;
				--text-gray: #888883;
			}

			/* Enhanced smooth scrolling for the entire site */
			html {
				scroll-behavior: smooth;
				overflow-x: hidden;
			}

			body {
				scroll-behavior: smooth;
			}

			/* Smooth scrolling for anchor links with navbar offset */
			* {
				scroll-margin-top: 100px;
			}

			/* Respect user's motion preferences for accessibility */
			@media (prefers-reduced-motion: reduce) {
				*,
				*::before,
				*::after {
					animation-duration: 0.01ms !important;
					animation-iteration-count: 1 !important;
					transition-duration: 0.01ms !important;
					scroll-behavior: auto !important;
				}
			}
		</style>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="m-0 font-poppins bg-white overflow-x-hidden">
		<Navbar />
		<slot />
		<Footer />
	</body>
</html>
