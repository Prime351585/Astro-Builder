---
import { Image } from "astro:assets";
import Layout from "../../layouts/Layout.astro";
import BlogImg from "../../assets/blogImages/Blog2.jpg";

// Blog post metadata
const post = {
    title: "Monopole Towers Explained: Types, Uses, and Advantages in EPC Projects",
    description:
        "Learn everything about monopole towers – types, applications, and benefits for EPC projects. Discover why Dwizzy Infra is a trusted provider of monopole erection and power transmission solutions.",
    author: "Dwizzy Infra Team",
    date: "2026-02-15",
    category: "Infrastructure",
    readTime: "7 min read",
    image: BlogImg,
    keywords: [
        "monopole towers",
        "EPC projects",
        "power transmission",
        "monopole types",
        "infrastructure",
        "Dwizzy Infra",
    ],
};

// Structured data for SEO
const structuredData = {
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    headline: post.title,
    description: post.description,
    image: `https://dwizzyinfra.com/blogImages/Blog2.jpg`,
    datePublished: post.date,
    dateModified: post.date,
    author: {
        "@type": "Organization",
        name: post.author,
    },
    publisher: {
        "@type": "Organization",
        name: "Dwizzy Infra",
        logo: {
            "@type": "ImageObject",
            url: "https://dwizzyinfra.com/icon.webp",
        },
    },
    mainEntityOfPage: {
        "@type": "WebPage",
        "@id": "https://dwizzyinfra.com/blog/monopole-towers-complete-guide/",
