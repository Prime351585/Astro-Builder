---
import { Image } from "astro:assets";
import Layout from "../../layouts/Layout.astro";
import BlogImg from "../../assets/blogImages/blog1.webp";

// Blog post metadata
const post = {
    title: "What Is Monopole Erection? A Simple Guide for Infrastructure Projects",
    description:
        "Discover what monopole erection is, its importance in power and telecom infrastructure, step-by-step installation, and best practices for safe, reliable projects.",
    author: "Dwizzy Infra Team",
    date: "2026-01-27",
    category: "Infrastructure",
    readTime: "8 min read",
    image: BlogImg,
    keywords: [
        "monopole erection",
        "power transmission",
        "infrastructure",
        "telecom towers",
        "monopole installation",
    ],
};

// Structured data for SEO
const structuredData = {
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    headline: post.title,
    description: post.description,
    image: `https://dwizzyinfra.com/blogImages/blog1.webp`,
    datePublished: post.date,
    dateModified: post.date,
    author: {
        "@type": "Organization",
        name: post.author,
    },
    publisher: {
        "@type": "Organization",
        name: "Dwizzy Infra",
        logo: {
            "@type": "ImageObject",
            url: "https://dwizzyinfra.com/icon.webp",
        },
    },
    mainEntityOfPage: {
        "@type": "WebPage",
        "@id": "https://dwizzyinfra.com/blog/monopole-erection-guide/",
    },
};
---

<Layout
    title={`${post.title} - Dwizzy Infra Blog`}
    description={post.description}
>
    <!-- Structured Data for SEO -->
    <script
        type="application/ld+json"
        set:html={JSON.stringify(structuredData)}
    />

    <main>
        <!-- Hero Section with Featured Image -->
        <section class="relative bg-black text-white py-20 overflow-hidden">
            <div
                class="absolute inset-0 bg-[url('/SliderImages/2.webp')] bg-cover bg-center opacity-30"
            >
            </div>
            <div
                class="absolute inset-0 bg-gradient-to-r from-black via-black/90 to-black/70"
            >
            </div>

            <div class="container mx-auto px-4 relative z-10">
                <!-- Breadcrumb Navigation -->
                <nav class="mb-8" aria-label="Breadcrumb">
                    <ol
                        class="flex items-center space-x-2 text-sm text-gray-300"
                        itemscope
                        itemtype="https://schema.org/BreadcrumbList"
                    >
                        <li
                            itemprop="itemListElement"
                            itemscope
                            itemtype="https://schema.org/ListItem"
                        >
                            <a
                                href="/"
                                class="hover:text-primary transition-colors"
                                itemprop="item"
                            >
                                <span itemprop="name">Home</span>
                            </a>
                            <meta itemprop="position" content="1" />
                        </li>
                        <li class="text-gray-500">
                            <svg
                                class="w-4 h-4"
                                fill="currentColor"
                                viewBox="0 0 20 20"
                            >
                                <path
                                    fill-rule="evenodd"
                                    d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                                    clip-rule="evenodd"></path>
                            </svg>
                        </li>
                        <li
                            itemprop="itemListElement"
                            itemscope
                            itemtype="https://schema.org/ListItem"
                        >
                            <a
                                href="/blog/"
                                class="hover:text-primary transition-colors"
                                itemprop="item"
                            >
                                <span itemprop="name">Blog</span>
                            </a>
                            <meta itemprop="position" content="2" />
                        </li>
                        <li class="text-gray-500">
                            <svg
                                class="w-4 h-4"
                                fill="currentColor"
                                viewBox="0 0 20 20"
                            >
                                <path
                                    fill-rule="evenodd"
                                    d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                                    clip-rule="evenodd"></path>
                            </svg>
                        </li>
                        <li
                            itemprop="itemListElement"
                            itemscope
                            itemtype="https://schema.org/ListItem"
                        >
                            <span
                                class="text-white font-semibold"
                                itemprop="name">{post.title}</span
                            >
                            <meta itemprop="position" content="3" />
                        </li>
                    </ol>
                </nav>

                <!-- Post Header -->
                <div class="max-w-4xl mx-auto text-center">
                    <span
                        class="inline-block bg-primary text-white px-4 py-2 font-bold uppercase tracking-wider text-sm mb-6"
                    >
                        {post.category}
                    </span>

                    <h1
                        class="text-4xl md:text-6xl font-bold mb-6 leading-tight"
                    >
                        {post.title}
                    </h1>

                    <div
                        class="flex items-center justify-center gap-6 text-gray-300 text-sm"
                    >
                        <div class="flex items-center gap-2">
                            <svg
                                class="w-5 h-5 text-primary"
                                fill="currentColor"
                                viewBox="0 0 20 20"
