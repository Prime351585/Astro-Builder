<nav class="bg-white  p-4 sticky top-0 z-10 ">
    <div class="container mx-auto flex justify-between items-center">
      <a href="/" class="text-black text-2xl font-bold">Logo</a>
      
      <!-- Mobile menu button -->
      <button id="mobile-menu-button" class="lg:hidden text-black focus:outline-none">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      </button>
      
      <!-- Desktop menu -->
      <ul class="hidden lg:flex space-x-4 font-bold">
        <li><a href="/" class="text-black hover:text-blue-400">Home</a></li>
        <li><a href="/about" class="text-black hover:text-blue-400">About</a></li>
        <li><a href="/services" class="text-black hover:text-blue-400">Services</a></li>
        <li><a href="/contact" class="text-black hover:text-blue-400">Contact</a></li>
      </ul>
    </div>
    
    <!-- Mobile menu -->
    <div id="mobile-menu" class="lg:hidden hidden mt-4 z-10 top-10 fixed bg-white  w-full">
      <ul class="flex flex-col space-y-2">
        <li><a href="/" class="block text-black hover:text-blue-400">Home</a></li>
        <li><a href="/about" class="block text-black hover:text-blue-400">About</a></li>
        <li><a href="/services" class="block text-black hover:text-blue-400">Services</a></li>
        <li><a href="/contact" class="block text-black hover:text-blue-400">Contact</a></li>
      </ul>
    </div>
  </nav>
  
  <script>
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
  
    mobileMenuButton?.addEventListener('click', () => {
      mobileMenu?.classList.toggle('hidden');
    });
  </script>