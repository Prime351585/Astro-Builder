---
import { Image } from "astro:assets";
import icon from "/public/icon.webp";
import instagramIcon from "/public/instagram-icon.svg";
import linkedinIcon from "/public/linkedin-icon.svg";
---

<div class="bg-white">
  <!-- Contact bar -->
  <div class=" bg-gray-100 py-2">
    <div class="container mx-auto flex justify-end items-center space-x-6 text-sm">
   
      <div class="flex items-center">
        <a href="https://www.instagram.com/dwizzy_infra/" target="_blank" rel="noopener noreferrer" class="flex items-center">
          <Image class="w-5 h-5 mr-2" src={instagramIcon} alt="Instagram" />
          <span class="hidden md:block">Instagram</span>
        </a>
      </div>
      <div class="flex items-center">
        <a href="https://www.linkedin.com/company/dwizzy-infra" target="_blank" rel="noopener noreferrer" class="flex items-center">
          <Image class="w-5 h-5 mr-2" src={linkedinIcon} alt="LinkedIn" />
          <span class="hidden md:block">LinkedIn</span>
        </a>
      </div>
      <div class="flex items-center">
        <a href="tel:+919555580002" class="flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          <span class="hidden md:block">Call Us</span>
        </a>
      </div>
      <div class="flex items-center">
        <a href="mailto:DwizzyInfra@xyz.com" class="flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          <span class="hidden md:block">Email Us</span>
        </a>
      </div>
    </div>
  </div>

  <!-- Main navigation -->
  <nav class="bg-white pt-4 pb-4 sticky top-0 z-10 text-right text-lg border-b">
    <div class="container mx-auto flex justify-between items-center text-xl">
      <a href="/">
        <Image class="w-24 ml-10" src={icon} alt="logo" />
      </a>
      
      <!-- Mobile menu button -->
      <button id="mobile-menu-button" class="lg:hidden text-black focus:outline-none mr-4">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      </button>
      
      <!-- Desktop menu -->
      <ul class="hidden lg:flex space-x-8 font-bold mr-8">
        <li><a href="/" class="text-black hover:text-primary">Home</a></li>
        <li><a href="/about" class="text-black hover:text-primary">About Us</a></li>
        <li><a href="/services" class="text-black hover:text-primary">Services</a></li>
        <li><a href="/projects" class="text-black hover:text-primary">Projects</a></li>
        <li><a href="/portfolio" class="text-black hover:text-primary">Portfolio</a></li>
        <li><a href="/contact" class="text-black hover:text-primary">Contact us</a></li>

      </ul>
    </div>
    
    <!-- Mobile menu -->
    <div id="mobile-menu" class="lg:hidden hidden mt-4 bg-white w-full border-t">
      <ul class="flex flex-col space-y-3 p-4">
        <li><a href="/" class="block text-black hover:text-primary">Home</a></li>
        <li><a href="/about" class="block text-black hover:text-primary">About Us</a></li>
        <li><a href="/services" class="block text-black hover:text-primary">Services</a></li>
        <li><a href="/projects" class="block text-black hover:text-primary">Projects</a></li>
        <li><a href="/portfolio" class="block text-black hover:text-primary">Portfolio</a></li>
        <li><a href="/contact" class="block text-black hover:text-primary">Contact us</a></li>

      </ul>
    </div>
  </nav>
</div>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>