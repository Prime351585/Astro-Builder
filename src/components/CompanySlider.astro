---
const partners = [
  { name: "Bajaj", logo: "/Partners/Bajaj.webp" },
  { name: "Bajel", logo: "/Partners/bajel.webp" },
  { name: "Afcons", logo: "/Partners/Afcons.webp" },
  { name: "Ayana", logo: "/Partners/Ayana.png" },
  { name: "Hgiel", logo: "/Partners/Hgiel.webp" },
  { name: "HP", logo: "/Partners/HP.webp" },
  { name: "L&T", logo: "/Partners/LT.webp" },
  { name: "NCC", logo: "/Partners/NCC.webp" },
  { name: "Rajshyama", logo: "/Partners/Rajshyama.webp" },
  { name: "NHIT", logo: "/Partners/NHIT.webp" },
  { name: "Kalpatru", logo: "/Partners/Kalpatru.webp" },
  { name: "Ganga", logo: "/Partners/Ganga.webp" },
  { name: "PECPL", logo: "/Partners/PECPL.webp" },
];
---

<div
  class="w-full overflow-hidden bg-gradient-to-r from-gray-50 via-white to-gray-50 py-12 relative"
>
  <!-- Gradient overlay -->
  <div
    class="absolute inset-0 bg-gradient-to-b from-transparent via-white/50 to-transparent pointer-events-none"
  >
  </div>

  <!-- Fade edges -->
  <div
    class="absolute left-0 top-0 bottom-0 w-20 md:w-32 bg-gradient-to-r from-gray-50 to-transparent z-10 pointer-events-none"
  >
  </div>
  <div
    class="absolute right-0 top-0 bottom-0 w-20 md:w-32 bg-gradient-to-l from-gray-50 to-transparent z-10 pointer-events-none"
  >
  </div>

  <!-- Slider container -->
  <div class="slider-container relative">
    <div class="slider-track flex items-center gap-8 md:gap-12 lg:gap-16">
      <!-- First set of logos -->
      {
        partners.map((partner) => (
          <div class="logo-item flex-shrink-0 transform hover:scale-110 transition-transform duration-300">
            <img
              src={partner.logo}
              alt={partner.name}
              class="h-12 md:h-16 lg:h-20 w-auto object-contain filter grayscale hover:grayscale-0 transition-all duration-300"
              loading="lazy"
            />
          </div>
        ))
      }
      <!-- Duplicate set for seamless loop -->
      {
        partners.map((partner) => (
          <div class="logo-item flex-shrink-0 transform hover:scale-110 transition-transform duration-300">
            <img
              src={partner.logo}
              alt={partner.name}
              class="h-12 md:h-16 lg:h-20 w-auto object-contain filter grayscale hover:grayscale-0 transition-all duration-300"
              loading="lazy"
            />
          </div>
        ))
      }
      <!-- Third set for extra smooth scrolling -->
      {
        partners.map((partner) => (
          <div class="logo-item flex-shrink-0 transform hover:scale-110 transition-transform duration-300">
            <img
              src={partner.logo}
              alt={partner.name}
              class="h-12 md:h-16 lg:h-20 w-auto object-contain filter grayscale hover:grayscale-0 transition-all duration-300"
              loading="lazy"
            />
          </div>
        ))
      }
    </div>
  </div>
</div>

<style>
  .slider-container {
    width: 100%;
    overflow: hidden;
  }

  .slider-track {
    display: flex;
    width: max-content;
    animation: scroll 60s linear infinite;
  }

  .slider-track:hover {
    animation-play-state: paused;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-100% / 3));
    }
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    .slider-track {
      animation-duration: 40s;
    }
  }

  @media (min-width: 641px) and (max-width: 1024px) {
    .slider-track {
      animation-duration: 50s;
    }
  }

  @media (min-width: 1025px) {
    .slider-track {
      animation-duration: 60s;
    }
  }

  /* Ensure smooth performance */
  .slider-track {
    will-change: transform;
  }

  .logo-item {
    min-width: 120px;
  }

  @media (min-width: 768px) {
    .logo-item {
      min-width: 150px;
    }
  }

  @media (min-width: 1024px) {
    .logo-item {
      min-width: 180px;
    }
  }
</style>
