---
import { Image } from "astro:assets";
import icon from "../../assets/icon.webp";
import instagramIcon from "../../assets/instagram-icon.svg"
---

<footer class="bg-black text-white pt-20 pb-10 relative overflow-hidden">
    <!-- Decorative Background -->
    <div
        class="absolute top-0 right-0 w-1/3 h-full bg-gradient-to-l from-gray-900 to-transparent opacity-50 pointer-events-none"
    >
    </div>

    <div class="container mx-auto px-4 relative z-10">
        <div
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-16"
        >
            <!-- Brand Column -->
            <div>
                <a href="/" class="block mb-6">
                    <Image
                        src={icon}
                        format="avif"
                        alt="Dwizzy Infra"
                        class="w-32 brightness-0 invert"
                    />
                </a>
                <p class="text-gray-400 mb-6 leading-relaxed">
                    Delivering excellence in infrastructure development with a
                    focus on quality, safety, and precision. We are your trusted
                    partner in complex projects.
                </p>
                <div class="flex gap-4">
                    
                    <a
                    href="https://www.instagram.com/dwizzy_infra/"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="hover:opacity-80 transition-opacity"
                >
                    <Image
                    format="avif"
                        class="w-10 h-10 invert"
                        src={instagramIcon}
                        alt="Instagram"
                    />
                </a>
                    <a
                        href="https://www.linkedin.com"
                        target="_blank"
                        class="w-10 h-10 rounded-full bg-gray-800 flex items-center justify-center hover:bg-primary transition-colors duration-300 group"
                    >
                        <svg
                            class="w-5 h-5 text-white"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                            ></path></svg
                        >
                    </a>
                </div>
            </div>

            <!-- Quick Links -->
            <div>
                <h4
                    class="text-lg font-bold mb-6 text-white uppercase tracking-wider border-l-4 border-primary pl-3"
                >
                    Quick Links
                </h4>
                <ul class="space-y-3">
                    <li>
                        <a
                            href="/"
                            class="text-gray-400 hover:text-primary transition-colors flex items-center gap-2 group"
                            ><span
                                class="w-1.5 h-1.5 bg-gray-600 rounded-full group-hover:bg-primary transition-colors"
                            ></span>Home</a
                        >
                    </li>
                    <li>
                        <a
                            href="/about/"
                            class="text-gray-400 hover:text-primary transition-colors flex items-center gap-2 group"
                            ><span
                                class="w-1.5 h-1.5 bg-gray-600 rounded-full group-hover:bg-primary transition-colors"
                            ></span>About Us</a
                        >
                    </li>
                    <li>
                        <a
                            href="/services/"
                            class="text-gray-400 hover:text-primary transition-colors flex items-center gap-2 group"
                            ><span
                                class="w-1.5 h-1.5 bg-gray-600 rounded-full group-hover:bg-primary transition-colors"
                            ></span>Services</a
                        >
                    </li>
                    <li>
                        <a
                            href="/projects/"
                            class="text-gray-400 hover:text-primary transition-colors flex items-center gap-2 group"
                            ><span
                                class="w-1.5 h-1.5 bg-gray-600 rounded-full group-hover:bg-primary transition-colors"
                            ></span>Projects</a
                        >
                    </li>
                    <li>
                        <a
                            href="/contact/"
                            class="text-gray-400 hover:text-primary transition-colors flex items-center gap-2 group"
                            ><span
                                class="w-1.5 h-1.5 bg-gray-600 rounded-full group-hover:bg-primary transition-colors"
                            ></span>Contact</a
                        >
                    </li>
                </ul>
            </div>

            <!-- Services -->
            <div>
                <h4
                    class="text-lg font-bold mb-6 text-white uppercase tracking-wider border-l-4 border-primary pl-3"
                >
                    Our Services
                </h4>
                <ul class="space-y-3">
                    <li>
                        <a
                            href="/services/"
                            class="text-gray-400 hover:text-primary transition-colors flex items-center gap-2 group"
                            ><span
                                class="w-1.5 h-1.5 bg-gray-600 rounded-full group-hover:bg-primary transition-colors"
                            ></span>Power Transmission</a
                        >
                    </li>
                    <li>
                        <a
                            href="/services/"
                            class="text-gray-400 hover:text-primary transition-colors flex items-center gap-2 group"
                            ><span
                                class="w-1.5 h-1.5 bg-gray-600 rounded-full group-hover:bg-primary transition-colors"
                            ></span>Foundation Jobs</a
                        >
                    </li>
                    <li>
                        <a
                            href="/services/"
                            class="text-gray-400 hover:text-primary transition-colors flex items-center gap-2 group"
                            ><span
                                class="w-1.5 h-1.5 bg-gray-600 rounded-full group-hover:bg-primary transition-colors"
                            ></span>Pile Load Testing</a
                        >
                    </li>
                    <li>
                        <a
                            href="/services/"
                            class="text-gray-400 hover:text-primary transition-colors flex items-center gap-2 group"
                            ><span
                                class="w-1.5 h-1.5 bg-gray-600 rounded-full group-hover:bg-primary transition-colors"
                            ></span>Erection Work</a
                        >
                    </li>
                    <li>
                        <a
                            href="/services/"
                            class="text-gray-400 hover:text-primary transition-colors flex items-center gap-2 group"
                            ><span
                                class="w-1.5 h-1.5 bg-gray-600 rounded-full group-hover:bg-primary transition-colors"
                            ></span>Heavy Civil Work</a
                        >
                    </li>
                </ul>
            </div>

            <!-- Contact Info -->
            <div>
                <h4
                    class="text-lg font-bold mb-6 text-white uppercase tracking-wider border-l-4 border-primary pl-3"
                >
                    Contact Us
                </h4>
                <ul class="space-y-4">
                    <li class="flex items-start gap-3 text-gray-400">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-6 w-6 text-primary flex-shrink-0 mt-0.5"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                            ></path>
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        <span
                            >C2-36, KA-323, Sector-12, Pratap Vihar Ghaziabad,
                            Uttar Pradesh, 201009, India</span
                        >
                    </li>
                    <li class="flex items-center gap-3 text-gray-400">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-5 w-5 text-primary flex-shrink-0"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                            ></path>
                        </svg>
                        <a
                            href="tel:+919555580002"
                            class="hover:text-white transition-colors"
                            >+91 9555580002</a
                        >
                    </li>
                    <li class="flex items-center gap-3 text-gray-400">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-5 w-5 text-primary flex-shrink-0"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                            ></path>
                        </svg>
                        <a
                            href="mailto:info@dwizzyinfra.com"
                            class="hover:text-white transition-colors"
                            >info@dwizzyinfra.com</a
                        >
                    </li>
                </ul>
            </div>
        </div>

        <div
            class="border-t border-gray-800 pt-8 flex flex-col md:flex-row justify-between items-center gap-4"
        >
            <p class="text-gray-500 text-sm">
                &copy; {new Date().getFullYear()} Dwizzy Infra. All Rights Reserved.
            </p>
            <div class="flex gap-6 text-sm text-gray-500">
                <a href="#" class="hover:text-primary transition-colors"
                    >Privacy Policy</a
                >
                <a href="#" class="hover:text-primary transition-colors"
                    >Terms of Service</a
                >
            </div>
        </div>
    </div>
</footer>
