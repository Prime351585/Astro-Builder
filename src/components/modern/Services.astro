---
const services = [
    {
        title: "Power Transmission",
        desc: "Foundation, Erection & Stringing work, Transmission line on Monopole structures.",
        image: "/Canva/what_we_do1.webp",
    },
    {
        title: "Foundation Jobs",
        desc: "Pile foundation Jobs and Ground Improvement engineering jobs.",
        image: "/Canva/what_we_do2.webp",
    },
    {
        title: "Pile Load Testing",
        desc: "Static and Dynamic Testing jobs.",
        image: "/Canva/what_we_do3.webp",
    },
    {
        title: "Erection Work",
        desc: "Erection of Power Transmission Monopoles & lattice Tower, NBT towers, I Girder, and Stringing work etc.",
        image: "/Canva/what_we_do4.webp",
    },
    {
        title: "Heavy Civil Work",
        desc: "All Heavy civil structural works.",
        image: "/Canva/what_we_do5.webp",
    },
];
---

<section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
        <div class="text-center mb-16">
            <h4
                class="text-primary font-bold tracking-widest uppercase mb-4 text-sm"
            >
                Our Services
            </h4>
            <h2 class="text-4xl lg:text-5xl font-bold text-black mb-4">
                What We Do
            </h2>
            <div class="w-20 h-1 bg-primary mx-auto"></div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {
                services.map((service) => (
                    <div class="group bg-white p-8 shadow-lg hover:shadow-xl transition-shadow duration-300 border-b-4 border-transparent hover:border-primary">
                        <div class="mb-6 overflow-hidden rounded-lg h-48">
                            <img
                                src={service.image}
                                alt={service.title}
                                class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
                                
                                style="will-change: transform;"
                            />
                        </div>

                        <h3 class="text-2xl font-bold mb-3 group-hover:text-primary transition-colors duration-300">
                            {service.title}
                        </h3>
                        <p class="text-gray-600 leading-relaxed">
                            {service.desc}
                        </p>

                        <div class="mt-6">
                            <a
                                href="/services"
                                class="text-sm font-bold uppercase tracking-wider text-black group-hover:text-primary transition-colors duration-300"
                            >
                                Learn More
                            </a>
                        </div>
                    </div>
                ))
            }
        </div>

        <div class="text-center mt-16">
            <a
                href="/services"
                class="inline-block px-10 py-4 bg-black text-white font-bold hover:bg-primary transition-colors duration-300 uppercase tracking-wider text-sm"
            >
                View All Services
            </a>
        </div>
    </div>
</section>
